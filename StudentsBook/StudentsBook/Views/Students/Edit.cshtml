@model StudentsBook.Models.Student

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" oninput="Rating.value = parseInt(Subject1.value)+parseInt(Subject2.value)+parseInt(Subject3.value)+parseInt(Subject4.value);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject1" class="control-label"></label>
                <input asp-for="Subject1" class="form-control" />
                <span asp-validation-for="Subject1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject2" class="control-label"></label>
                <input asp-for="Subject2" class="form-control" />
                <span asp-validation-for="Subject2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject3" class="control-label"></label>
                <input asp-for="Subject3" class="form-control" />
                <span asp-validation-for="Subject3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject4" class="control-label"></label>
                <input asp-for="Subject4" class="form-control" />
                <span asp-validation-for="Subject4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

