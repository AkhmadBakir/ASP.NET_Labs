@model StudentsBook.Models.Student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Студент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" oninput="Rating.value = parseInt(Subject1.value)+parseInt(Subject2.value)+parseInt(Subject3.value)+parseInt(Subject4.value);">
            <table style="height: 97px;" width="216">
                <tbody>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject1" class="control-label"></label>
                        <input asp-for="Subject1" type="number" class="form-control" />
                        <span asp-validation-for="Subject1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject2" class="control-label"></label>
                        <input asp-for="Subject2" type="number" class="form-control" />
                        <span asp-validation-for="Subject2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject3" class="control-label"></label>
                        <input asp-for="Subject3" type="number" class="form-control" />
                        <span asp-validation-for="Subject3" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject4" class="control-label"></label>
                        <input asp-for="Subject4" type="number" class="form-control" />
                        <span asp-validation-for="Subject4" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                    </div>
                </tbody>
            </table>
        </form>
    </<div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>